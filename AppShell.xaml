<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Anasayfa"
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        />
    <ShellContent
        Title="Öğrenci Bilgisi"
        Icon="information.png"
        ContentTemplate="{DataTemplate local:bilgi}"
        Route="bilgi" />
    <ShellContent
         Title="Ders Seçimi"
         Icon="check.png"
         ContentTemplate="{DataTemplate local:derssecimi}"
         Route="derssecimi" />

    <ShellContent
        Title="Not Hesaplama"
        Icon="calculator.png"
        ContentTemplate="{DataTemplate local:nothesabı}"
        Route="nothesabı" />
    <ShellContent
         Title="Yapılacaklar"
         Icon="liste.png"
         ContentTemplate="{DataTemplate local:yapılacaklar}"
         Route="yapılacaklar" />

</Shell>
